<Window x:Class="DisplayCustomText_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DXGrid_DisplayCustomText_MVVM"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <dxg:GridControl ItemsSource="{Binding InvoiceList}" CustomColumnDisplayTextCommand="{Binding CustomColumnDisplayTextCommand}" AutoGenerateColumns="AddNew"/>
    </Grid>
</Window>
